    "cytoscape": "^3.33.1",
    "monaco-editor": "^0.55.1",
    "reactflow": "^11.11.4",
    "solid-js": "^1.8.7",
    "xterm": "^5.3.0"
  },
  "devDependencies": {
    "@babel/core": "^7.28.5",
    "@babel/preset-env": "^7.28.5",
    "@babel/preset-typescript": "^7.28.5",
