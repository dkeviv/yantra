{
  "name": "yantra",
  "version": "0.1.0",
  "description": "AI-first development platform that generates code that never breaks",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "tauri": "tauri",
